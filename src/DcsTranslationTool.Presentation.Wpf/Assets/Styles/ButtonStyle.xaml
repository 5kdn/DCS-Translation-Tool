<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatDarkBgButton}">
        <Setter Property="Background" Value="{StaticResource MaterialDesign.Brush.ValidationError}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="md:RippleAssist.IsDisabled" Value="True"/>
    </Style>

    <Style x:Key="NavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Foreground" Value="{StaticResource MaterialDesign.Brush.Background}" />
    </Style>

</ResourceDictionary>