<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    Keyは以下の命名方法で指定可能です
    {Size}{Direction}Margin

    Size:
    - XSmall:  8px
    - Small:  12px
    - Medium: 24px
    - Large:  36px
    - XLarge: 48px

    Direction:
    - (Empty): L/R/T/B
    - Left
    - Right
    - Top
    - Bottom
    - X: L/R
    - Y: T/B

    -->
    <Thickness x:Key="XSmallMargin">8, 8, 8, 8</Thickness>
    <Thickness x:Key="XSmallLeftMargin">8, 0, 0, 0</Thickness>
    <Thickness x:Key="XSmallRightMargin">0, 0, 8, 0</Thickness>
    <Thickness x:Key="XSmallTopMargin">0, 8, 0, 0</Thickness>
    <Thickness x:Key="XSmallBottomMargin">0, 0, 0, 8</Thickness>
    <Thickness x:Key="XSmallXMargin">8, 0, 8, 0</Thickness>
    <Thickness x:Key="XSmallYMargin">0, 8, 0, 8</Thickness>

    <Thickness x:Key="SmallMargin">12, 12, 12, 12</Thickness>
    <Thickness x:Key="SmallLeftMargin">12, 0, 0, 0</Thickness>
    <Thickness x:Key="SmallRightMargin">0, 0, 12, 0</Thickness>
    <Thickness x:Key="SmallTopMargin">0, 12, 0, 0</Thickness>
    <Thickness x:Key="SmallBottomMargin">0, 0, 0, 12</Thickness>
    <Thickness x:Key="SmallXMargin">12, 0, 12, 0</Thickness>
    <Thickness x:Key="SmallYMargin">0, 12, 0, 12</Thickness>

    <Thickness x:Key="MediumMargin">24, 24, 24, 24</Thickness>
    <Thickness x:Key="MediumLeftMargin">24, 0, 0, 0</Thickness>
    <Thickness x:Key="MediumRightMargin">0, 0, 24, 0</Thickness>
    <Thickness x:Key="MediumTopMargin">0, 24, 0, 0</Thickness>
    <Thickness x:Key="MediumBottomMargin">0, 0, 0, 24</Thickness>
    <Thickness x:Key="MediumXMargin">24, 0, 24, 0</Thickness>
    <Thickness x:Key="MediumYMargin">0, 24, 0, 24</Thickness>

    <Thickness x:Key="LargeMargin">36, 36, 36, 36</Thickness>
    <Thickness x:Key="LargeLeftMargin">36, 0, 0, 0</Thickness>
    <Thickness x:Key="LargeRightMargin">0, 0, 36, 0</Thickness>
    <Thickness x:Key="LargeTopMargin">0, 36, 0, 0</Thickness>
    <Thickness x:Key="LargeBottomMargin">0, 0, 0, 36</Thickness>
    <Thickness x:Key="LargeXMargin">36, 0, 36, 0</Thickness>
    <Thickness x:Key="LargeYMargin">0, 36, 0, 36</Thickness>

    <Thickness x:Key="XLargeMargin">48, 48, 48, 48</Thickness>
    <Thickness x:Key="XLargeLeftMargin">48, 0, 0, 0</Thickness>
    <Thickness x:Key="XLargeRightMargin">0, 0, 48, 0</Thickness>
    <Thickness x:Key="XLargeTopMargin">0, 48, 0, 0</Thickness>
    <Thickness x:Key="XLargeBottomMargin">0, 0, 0, 48</Thickness>
    <Thickness x:Key="XLargeXMargin">48, 0, 48, 0</Thickness>
    <Thickness x:Key="XLargeYMargin">0, 48, 0, 48</Thickness>

</ResourceDictionary>
